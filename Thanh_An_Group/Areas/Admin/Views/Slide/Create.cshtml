@model ThanhAn_Group.DAL.Models.Empolee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h1>Create</h1>

<h4>Slide</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SlideName" class="control-label"></label>
                <input asp-for="SlideName" class="form-control" />
                <span asp-validation-for="SlideName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagesUploand" class="control-label"></label>
                <input asp-for="ImagesUploand" class="form-control" />
                <span asp-validation-for="ImagesUploand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
