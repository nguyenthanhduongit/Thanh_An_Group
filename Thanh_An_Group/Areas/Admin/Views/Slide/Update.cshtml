@model ThanhAn_Group.DAL.Models.Slide

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h1>Update</h1>

<h4>Slide</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SlideId" />
            <div class="form-group">
                <label asp-for="SlideName" class="control-label"></label>
                <input asp-for="SlideName" class="form-control" />
                <span asp-validation-for="SlideName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <img src="/Images/@Model.Images" alt="Alternate Text" width="300" height="400" />
                <input asp-for="Images" class="form-control" value="@Model.Images" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">File</label>
                <input type="file" id="Images" name="Images" class="form-control" value="@Model.Images" />

                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
