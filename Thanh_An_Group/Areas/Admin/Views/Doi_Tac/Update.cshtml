@model ThanhAn_Group.DAL.Models.DoiTac

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h1>Update</h1>

<h4>DoiTac</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameDoiTac" class="control-label"></label>
                <input asp-for="NameDoiTac" class="form-control" />
                <span asp-validation-for="NameDoiTac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdressDoiTac" class="control-label"></label>
                <input asp-for="AdressDoiTac" class="form-control" />
                <span asp-validation-for="AdressDoiTac" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mst" class="control-label"></label>
                <input asp-for="Mst" class="form-control" />
                <span asp-validation-for="Mst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tel" class="control-label"></label>
                <input asp-for="Tel" class="form-control" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Admin/Doi_Tac/Index">Quay Lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
